{
  "name": "@colony/pinion",
  "version": "0.1.0",
  "description": "Colony orbit-db pinning service",
  "bin": {
    "pinion": "bin/index.js"
  },
  "main": "src/index.js",
  "scripts": {
    "test": "ava",
    "lint": "eslint --fix src",
    "ipfsd": "docker run -v $(pwd)/data:/root/.jsipfs -p 4001:4001 -p 4003:4003 -p 127.0.0.1:8080:8080 -p 127.0.0.1:5001:5001 joincolony/js-ipfs:latest daemon --enable-pubsub-experiment",
    "postinstall": "scripts/postinstall.sh",
    "start": "bin/index.js",
    "test:ci": "wait-on tcp:$CI_API_PORT && yarn test --tap | tap-xunit > reports/ava/ava-results.xml"
  },
  "keywords": [
    "ipfs",
    "orbit-db",
    "pinning"
  ],
  "author": "Christian Maniewski <chris@colony.io>",
  "license": "MIT",
  "devDependencies": {
    "@colony/eslint-config-colony": "8.0.0-beta.2",
    "ava": "1.4.1",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.6.0",
    "eslint-plugin-eslint-comments": "3.1.1",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "2.1.0",
    "ipfs": "0.35.0",
    "ipfsd-ctl": "0.42.2",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "tap-xunit": "2.3.0",
    "wait-on": "3.2.0"
  },
  "dependencies": {
    "debug": "^4.1.0",
    "dotenv": "^7.0.0",
    "ipfs-http-client": "^30.1.3",
    "ipfs-pubsub-peer-monitor": "^0.0.8",
    "is-ipfs": "^0.6.0",
    "lru-cache": "^5.1.1",
    "orbit-db": "^0.20.0-rc.7"
  },
  "ava": {
    "files": "**/__tests__/*.test.js"
  }
}
